{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "i18n-ally.localesPaths": [
    "src/locales",
    "examples/nodejs-demo/locales",
    "examples/react-demo/public/locales"
  ]
}
